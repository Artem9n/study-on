{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / StudyOn{% endblock %}

{% block body %}
    <h1>{{ course.name }}</h1>

    <p>{{ course.description }}</p>

    <h2>Уроки</h2>

    <div>
        {% if lessons is not empty %}
            <ol>
                {% for lesson in lessons %}
                    <li>
                        <a style="text-decoration: none" href="{{ path('app_lesson_show', {'id': lesson.id}) }}">
                            {{ lesson.name }}
                        </a>
                    </li>
                {% else %}
                    <div>Нет уроков</div>
                {% endfor %}
            </ol>
        {% endif %}
    </div>

    <div>
        <hr>
    </div>

    <div class="d-flex p-2">
        <a class="btn btn-outline-secondary me-1" role="button" href="{{ path('app_course_index') }}">К списку курсов</a>
        <a class="btn btn-outline-secondary me-1" role="button" href="{{ path('app_course_edit', {'id': course.id}) }}">Редактировать</a>
        {{ include('course/_delete_form.html.twig') }}
        <a class="btn btn-outline-secondary ms-1" role="button" href="{{ path('app_lesson_new', {'course_id': course.id}) }}">Добавить урок</a>
    </div>
{% endblock %}
